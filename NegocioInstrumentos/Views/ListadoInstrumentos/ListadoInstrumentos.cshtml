@model IEnumerable<NegocioInstrumentos.Models.Instrumento>
@{
    ViewBag.Title = "ListadoInstrumentos";
}

<div class="row">
<div class="col-sm-12">
    <div>
        <h4>Listado de instrumentos cargados en la base de datos</h4>
    </div>
</div>
</div>
<div class="row">
    <div class="col-lg-6">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="text-center">
                        Instrumento
                    </th>
                    <th class="text-center">
                        Descripcion
                    </th>
                    <th class="text-center">
                        Stock
                    </th>
                    <th class="text-center">
                        Precio
                    </th>
                    <th class="text-center">
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var instrumento in Model)
                {
                    <tr class="text-center">
                        <td>
                            @instrumento.pNombre
                        </td>
                        <td>
                            @instrumento.pDescripcion
                        </td>
                        <td>
                            @instrumento.pStock
                        </td>
                        <td>
                            @instrumento.pPrecio
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="form-group text-right">
            <div class="col-xs-12">
                <a href="@Url.Action("AgregarInstrumentos", "Instrumentos")" class="btn btn-primary">Nuevo instrumento</a>
            </div>
        </div>
    </div>
</div>

